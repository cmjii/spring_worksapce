<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myweb.www.repository.BoardDAO">

	<insert id="insert">
		insert into board(title,writer,content) values(#{title},#{writer},#{content})
	</insert>

	<select id="getlist" resultType="com.myweb.www.domain.BoardVO">
		select * from board
	</select>
	
	<select id="detail" resultType="com.myweb.www.domain.BoardVO">
		select * from board where bno = #{bno}
	</select>

	<update id="modify">
		update board set title=#{title}, content=#{content}, mod_at=now(),read_count=read_count-2 where bno = #{bno}
	</update>

	<update id="readcount">
		update board set read_count = read_count+1 where bno = #{bno}
	</update>

	<delete id="delete">
		delete from board where bno = #{bno}
	</delete>

</mapper>